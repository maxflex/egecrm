RewriteRule ^tasks/seo/([0-9]+)[/]?$ index.php?controller=task&action=list&list=$1&type=1 [QSA,L]

RewriteRule ^tasks/ajax/([a-zA-Z]+)[/]?$ index.php?controller=task&action=Ajax$1 [QSA,L]

